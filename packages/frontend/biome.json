{
  "extends": "//",
  "files": {
    "includes": ["src/**/*", "!src/**/dist", "!src/**/node_modules"]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "linter": {
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnknownProperty": "off"
      },
      "suspicious": {
        "noUnknownAtRules": "off",
        "noAssignInExpressions": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
